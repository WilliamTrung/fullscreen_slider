{
    "autoplay": true,
    "delay": 1000,
    "randomTransitions": true,

    "transitions": [
        "fade-in",
        "slide-left",
        "slide-right",
        "push-left",
        "push-right",
        "zoom-in",
        "zoom-out",
        "wipe-left",
        "wipe-right",
        "split-horizontal",
        "split-vertical",
        "flip-horizontal",
        "flip-vertical",
        "cube-rotate",
        "curtain-open",
        "checkerboard",
        "random-stripes",
        "page-turn",
        "book-open",
        "water-ripple",
        "glass-distort",
        "ken-burns"
    ],

    "images": {
        "shuffle": true
    },

    "music": {
        "shuffle": true,
        "volume": 0.8,
        "sources": [
            "music/background.mp3"
        ]
    },

    "keyboard": {
        "enabled": true
    }
}
